<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_challenge"
        android:padding="8dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/text_view_challenge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:text="Ini Challenge"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/text_view_challenge_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/text_view_challenge_duedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:text="Due date: 12/03/2019"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/linear_layout_target"
            android:background="@color/palette1orange"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_view_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="129/150"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>